#!/bin/sh

# Find netcat command or die
NC=$(command -v netcat || command -v nc || exit 1)

DOCKER_SOCKET=/var/run/docker.sock

CONFIG_FILE=/etc/zabbix/scripts/trapper/docker.conf

[ -r "$CONFIG_FILE" ] && . $CONFIG_FILE

CTS=$(printf "GET /containers/json?all=1 HTTP/1.0\r\n\r\n"|sudo $NC -U "$DOCKER_SOCKET"|tail -n 1)
LEN=$(echo "$CTS"|jq 'length')

for I in $(seq 0 $((LEN-1)))
do
    ID=$(echo "$CTS"|jq ".[$I].Id"|sed -e 's/^"//' -e 's/"$//')
    NAME=$(echo "$CTS"|jq ".[$I].Names[0]"|sed -e 's/^"\//"/')
    CT=$(printf "GET /containers/$ID/json HTTP/1.0\r\n\r\n"|sudo $NC -U "$DOCKER_SOCKET"|tail -n 1)
    RUNNING=$(echo "$CT"|jq ".State.Running"|sed -e 's/^"//' -e 's/"$//')
    if [ "$RUNNING" = "true" ]; then
        TOP=$(printf "GET /containers/$ID/top?ps_args=-aux HTTP/1.0\r\n\r\n"|sudo $NC -U "$DOCKER_SOCKET"|tail -n 1)
        PS=$(echo "$TOP"|jq ".Processes")
        PS_LEN=$(echo "$PS"|jq "length")

        for J in $(seq 0 $((PS_LEN-1)))
        do
            P=$(echo "$PS"|jq ".[$J]")

            PID=$(echo "$P"|jq ".[1]"|sed -e 's/^"//' -e 's/"$//')
            CMD=$(basename "$(echo "$P"|jq ".[10]"|sed -e 's/^"//' -e 's/"$//'|cut -d' ' -f1)")

            DATA="$DATA,"'{"{#NAME}":'$NAME',"{#PID}":'$PID',"{#CMD}":"'$CMD'"}'
        done
    fi
done

echo '{"data":['${DATA#,}']}'
